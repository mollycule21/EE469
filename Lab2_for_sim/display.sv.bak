// This module displays the current level of the game

module display (in, out);
 input logic [3:0] in;
 output logic [6:0] out;

 parameter [6:0] nil = 7'b1111111;
 
 always_comb begin
 case (in)

	 4'b0000: begin 
		  out = ~7'b0111111; // 0
	 end 
	 4'b0001: begin
		 out = ~7'b0000110; // 1
	 end 
	 4'b0010: begin 
		out = ~7'b1011011; // 2
	 end 
	 4'b0011: begin
		 out = ~7'b1001111; // 3
	 end 
	 4'b0100: begin
		 out = ~7'b1100110; // 4
	 end 
	 4'b0101: begin 
		 out = ~7'b1101101; // 5
	 end 
	 4'b0110: begin 
		 out = ~7'b1111101; // 6
	 end 
	 4'b0111: begin
		 out = ~7'b0000111; // 7
	 end 
	 4'b1000: begin 
		 out = ~7'b1111111; // 8
	 end 
	 4'b1001: begin 
		 out = ~7'b1101111; // 9
	 end 
	 4'd10: begin 
		out = ~7'b1110111; // A
	 end 
	 4'd11: begin 
		out = ~7'b1111100; // b 
	 end 
	 4'd12: begin 
		out = ~7'b0111001; // C
	 end 
	 4'd13: begin 
		out = ~7'b1011110; // d
	 end 
	 4'd14: begin 
		out = ~7'b1111001; // E
	 end 
	 4'd15: begin 
		out = ~7'b11110001; // F
	 end 
	 default: begin 
		out = nil;
	 end 
	 
 endcase
 end

endmodule 
